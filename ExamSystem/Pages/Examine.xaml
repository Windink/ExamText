<Page x:Class="ExamSystem.Pages.Examine"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Examine">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="593*"/>
            <ColumnDefinition Width="207*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <StackPanel Orientation="Vertical" Name="Choices">
                <Label Content="选择题"  FontSize="20"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Name="Completions">
                <Label Content="填空题" FontSize="20"></Label>
            </StackPanel>
            <StackPanel Orientation="Vertical" Name="SQuestions">
                <Label Content="问答题" FontSize="20"></Label>
            </StackPanel>
           
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="提交" Margin="0,20,0,0" Click="Button_Click"></Button>
            <Button Content="返回" Click="Reverse_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
